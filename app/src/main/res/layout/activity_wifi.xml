<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1faee">

    <TextView
        android:id="@+id/wifiTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/wifi"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/wifiName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiTag"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/wifiState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiName"
        android:padding="10dp"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/wifiWhitelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiState"
        android:padding="10dp"
        android:text="@string/whitelist"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/wifiList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wifiWhitelist"
        android:layout_marginTop="3dp"
        android:longClickable="true">

    </ListView>

</RelativeLayout>